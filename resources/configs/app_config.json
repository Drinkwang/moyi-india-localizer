{
	"app": {
		"author": "鹏砚 (Drinkwang)",
		"development": "人机协作 (与Claude AI共同开发)",
		"homepage": "https://space.bilibili.com/13061595",
		"language": "zh_CN",
		"license": "MIT",
		"name": "AI翻译游戏开发工具",
		"repository": "https://github.com/Drinkwang",
		"theme": "default",
		"version": "1.0.0"
	},
	"file_handling": {
		"backup_on_translate": true,
		"max_file_size": 10485760,
		"supported_formats": [
			".txt",
			".json",
			".csv",
			".gd",
			".cs",
			".lua"
		]
	},
	"knowledge_base": {
		"auto_backup": true,
		"enabled": true,
		"max_cache_size": 1000,
		"root_path": "data/knowledge_base/",
		"similarity_threshold": 0.6
	},
	"logging": {
		"level": "INFO",
		"max_log_files": 5,
		"max_log_size": 5242880
	},
	"translation": {
		"batch_size": 10,
		"enable_cache": true,
		"preserve_formatting": true,
		"source_language": "en",
		"target_language": "zh"
	},
	"ui": {
		"auto_save": true,
		"auto_save_interval": 300,
		"min_window_size": {
			"height": 600,
			"width": 800
		},
		"window_size": {
			"height": 800,
			"width": 1200
		}
	}
}